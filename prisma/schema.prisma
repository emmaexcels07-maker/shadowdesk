generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // url is no longer here in Prisma 7+
}

model Task {
  id        String   @id @default(uuid())
  title     String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Subscriber {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())
}
